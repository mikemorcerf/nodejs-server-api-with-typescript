{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
		"esModuleInterop": true,
		//"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
    "rootDir": "./src",
    "strictPropertyInitialization": false,
		"baseUrl": "./src",
		"allowJs": true,
    "paths": {
			"@modules/*": ["modules/*"],
			"@config/*": ["config/*"],
			"@shared/*": ["shared/*"]
		},
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"bower_components",
		"jspm_packages",
		"tmp",
		"dist",
		"jest.config.js",
		"prettier.config.js"
	]
}
